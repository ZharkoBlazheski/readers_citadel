<div class="flex items-center grow p-8 lg:p-6">
    <div class="w-full md:w-6/12 lg:w-3/12 mx-auto my-10 bg-gray-300 dark:bg-brand-gray-light py-4 rounded">
      <div class="text-center">
        <h1 class="my-3 text-3xl md:text-4xl font-semibold font-serif dark:text-gray-300 text-gray-800">Sign up</h1>
      </div>
      <div class="m-7">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mb-6">
          <%= f.label :email, "Email Address", class: "text-base md:text-lg block mb-2 dark:text-gray-300 text-gray-800" %>
          <%= f.email_field :email, placeholder: "name@example.com", class: "text-sm md:text-base w-full px-3 py-2 text-gray-900 placeholder-gray-500 bg-gray-200 border border-gray-300 rounded-md focus:outline-none focus:ring-0 focus:ring-blue-300 focus:border-blue-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500", required: true %>
        </div>
        <div class="mb-6">
          <div class="flex justify-between mb-2">
            <%= f.label :password, class: "text-base md:text-lg dark:text-gray-300 text-gray-800" %>
          </div>
          <%= f.password_field :password, placeholder: "Password", class: "text-sm md:text-base w-full px-3 py-2 text-gray-900 placeholder-gray-500 bg-gray-200 border border-gray-300 rounded-md focus:outline-none focus:ring-0 focus:ring-blue-300 focus:border-blue-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500", required: true %>
          <% if @minimum_password_length %>
            <em class="mb-2 text-xs text-gray-300 dark:text-gray-400">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <div class="mb-6">
          <div class="flex justify-between mb-2">
            <%= f.label :password_confirmation, class: "text-base md:text-lg dark:text-gray-300 text-gray-800" %>
          </div>
          <%= f.password_field :password_confirmation, placeholder: "Password", class: "text-sm md:text-base w-full px-3 py-2 text-gray-900 placeholder-gray-500 bg-gray-200 border border-gray-300 rounded-md focus:outline-none focus:ring-0 focus:ring-blue-300 focus:border-blue-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500", required: true %>
        </div>
        <div class="flex justify-end mb-6">
          <%= f.submit "Sign up", class: "text-base md:text-lg mt-8 rounded-md bg-brand-orange px-10 py-2 text-white cursor-pointer" %>
        </div>
        <% end %>
      </div>
    </div>
</div>